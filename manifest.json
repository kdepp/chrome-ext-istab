{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["contentscript.css"],
      "js": ["contentscript.js"]
    }
  ],

  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>"
  ]
}
